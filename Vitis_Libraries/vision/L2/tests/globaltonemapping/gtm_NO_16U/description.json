{
    "name": "Xilinx GTM_NO_16U L2 Test", 
    "description": [
        "GLOBAL TONE MAPPING L2 function example"
    ], 
    "flow": "vitis", 
    "platform_allowlist": [
        "u200",
		"aws-vu9p-f1",
		"vck190",		
        "zcu102", 
        "zcu104",
		"u50"
    ], 
    "platform_blocklist": [
        "u280", 
        "u250"
    ], 
    "platform_properties": {
        "u200": {
            "host": {
                "compiler": {
                    "includepaths": [
                        "$(OPENCV_INCLUDE)"
                    ]
                }, 
                "linker": {
                    "librarypaths": [
                        "$(OPENCV_LIB)"
                    ]
                }
            }
        }, 
        "u50": {
            "host": {
                "compiler": {
                    "includepaths": [
                        "$(OPENCV_INCLUDE)"
                    ]
                }, 
                "linker": {
                    "librarypaths": [
                        "$(OPENCV_LIB)"
                    ]
                }
            }
        },
        "aws-vu9p-f1": {
            "host": {
                "compiler": {
                    "includepaths": [
                        "$(OPENCV_INCLUDE)"
                    ]
                }, 
                "linker": {
                    "librarypaths": [
                        "$(OPENCV_LIB)"
                    ]
                }
            }
        },
        "vck190": {
            "host": {
                "compiler": {
                    "includepaths": [
						"$(SYSROOT)/usr/include",
                        "$(SYSROOT)/usr/include/opencv4"
                    ], 
                    "options": "--sysroot=$(SYSROOT)"
                }, 
                "linker": {
                    "librarypaths": [
                        "$(SYSROOT)/usr/lib", 
                        "${SYSROOT}/lib"
                    ]
                }
            }
        },
        "zcu102": {
            "host": {
                "compiler": {
                    "includepaths": [
                        "$(SYSROOT)/usr/include",
						"$(SYSROOT)/usr/include/opencv4"
                    ], 
                    "options": "--sysroot=$(SYSROOT)"
                }, 
                "linker": {
                    "librarypaths": [
                        "$(SYSROOT)/usr/lib", 
                        "${SYSROOT}/lib"
                    ]
                }
            }
        }, 
        "zcu104": {
            "host": {
                "compiler": {
                    "includepaths": [
                        "$(SYSROOT)/usr/include",
						"$(SYSROOT)/usr/include/opencv4"
                    ], 
                    "options": "--sysroot=$(SYSROOT)"
                }, 
                "linker": {
                    "librarypaths": [
                        "$(SYSROOT)/usr/lib", 
                        "${SYSROOT}lib"
                    ]
                }
            }
        }
    }, 
    "gui": true, 
    "launch": [
        {
            "target": "sw_emu", 
            "cmd_args": "LIB_DIR/data/ltm_input_s.png", 
            "name": "sw_emu", 
            "ld_library_path": [
                "$(OPENCV_LIB)", 
                "$(LD_LIBRARY_PATH)", 
                "$(XILINX_XRT)/lib"
            ]
        }, 
        {
            "target": "hw_emu", 
            "cmd_args": "LIB_DIR/data/ltm_input_s.png", 
            "name": "hw_emu", 
            "ld_library_path": [
                "$(OPENCV_LIB)", 
                "$(LD_LIBRARY_PATH)", 
                "$(XILINX_XRT)/lib"
            ]
        }, 
        {
            "target": "hw", 
            "cmd_args": "LIB_DIR/data/ltm_input.png", 
            "name": "hardware_build", 
            "ld_library_path": [
                "$(OPENCV_LIB)", 
                "$(LD_LIBRARY_PATH)", 
                "$(XILINX_XRT)/lib"
            ]
        }
    ], 
    "data": [
        "LIB_DIR/data/ltm_input_s.png", 
	"LIB_DIR/data/ltm_input.png"
    ], 
    "host": {
        "host_exe": "globaltonemapping", 
        "compiler": {
            "sources": [
                "LIB_DIR/L2/examples/globaltonemapping/xf_gtm_tb.cpp", 
                "LIB_DIR/ext/xcl2/xcl2.cpp"
            ], 
            "includepaths": [
				"LIB_DIR/L2/tests/globaltonemapping/gtm_NO_16U",
                "LIB_DIR/L2/examples/globaltonemapping"
            ], 
            "options": "-O3", 
            "symbols": []
        }
    }, 
    "v++": {
        "compiler": {
            "symbols": [], 
            "includepaths": [
				"LIB_DIR/L2/tests/globaltonemapping/gtm_NO_16U",
                "LIB_DIR/L2/examples/globaltonemapping"
            ], 
            "clflags": []
        }
    }, 
    "containers": [
        {
            "name": "krnl_gtm",
            "accelerators": [
                {
                    "name": "gtm_accel", 
                    "location": "LIB_DIR/L2/examples/globaltonemapping/xf_gtm_accel.cpp"
                }
            ]
        }
    ], 
    "check_env": [
        {
            "env": "OPENCV_INCLUDE", 
            "echo": "Cannot find OpenCV include path. Please set OPENCV_INCLUDE variable"
        }, 
        {
            "env": "OPENCV_LIB", 
            "echo": "Cannot find Opencv lib path. Please set OPENCV_LIB variable"
        }
    ], 
    "testinfo": {
        "disable": false, 
        "jobs": [
            {
                "index": 0, 
                "dependency": [], 
                "env": "", 
                "cmd": "", 
                "max_memory_MB": 32768, 
                "max_time_min": 520
            }
        ], 
        "targets": [
            "vitis_sw_emu", 
            "vitis_hw_emu", 
            "vitis_hw"
        ], 
        "category": "full"
    } 
}
